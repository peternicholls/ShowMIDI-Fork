{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://showmidi.git/scripts/validation/flake-tracking.schema.json",
  "title": "Flake Tracking Schema",
  "description": "Schema for tracking flaky test history and quarantine status",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "const": "1.0.0"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "quarantined_checks": {
      "type": "array",
      "description": "List of checks currently quarantined due to flakiness",
      "items": {
        "type": "object",
        "required": ["check_id", "quarantine_date", "owner_id", "sla_deadline", "status"],
        "properties": {
          "check_id": {
            "type": "string",
            "description": "Unique identifier for the quarantined check"
          },
          "check_category": {
            "type": "string",
            "description": "Category of the check (unit-tests, integration-tests, etc.)"
          },
          "quarantine_date": {
            "type": "string",
            "format": "date-time",
            "description": "When the check was quarantined"
          },
          "owner_id": {
            "type": "string",
            "description": "Team/person responsible for remediation"
          },
          "sla_deadline": {
            "type": "string",
            "format": "date-time",
            "description": "When remediation SLA expires"
          },
          "status": {
            "type": "string",
            "enum": ["active", "remediated", "re-enabled", "abandoned"],
            "description": "Current lifecycle state"
          },
          "trigger_run_ids": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Run IDs that triggered quarantine"
          },
          "remediation_notes": {
            "type": "string",
            "description": "Investigation summary from owner"
          },
          "re_enable_date": {
            "type": "string",
            "format": "date-time",
            "description": "When check returned to required gates"
          }
        }
      }
    },
    "check_history": {
      "type": "object",
      "description": "Pass/fail history per check for flake detection",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "required": ["check_id", "history"],
          "properties": {
            "check_id": {"type": "string"},
            "history": {
              "type": "array",
              "maxItems": 50,
              "description": "Last 50 runs (rolling window)",
              "items": {
                "type": "object",
                "required": ["run_id", "result", "timestamp"],
                "properties": {
                  "run_id": {"type": "string"},
                  "result": {
                    "type": "string",
                    "enum": ["pass", "fail", "skipped", "timeout"]
                  },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "platform": {
                    "type": "string",
                    "enum": ["macos", "windows", "linux", "local"]
                  }
                }
              }
            },
            "failure_rate_7d": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "Failure rate over last 7 days"
            },
            "failures_in_last_10": {
              "type": "integer",
              "minimum": 0,
              "maximum": 10,
              "description": "Number of failures in last 10 runs"
            }
          }
        }
      }
    }
  },
  "required": ["version", "last_updated", "quarantined_checks", "check_history"]
}
